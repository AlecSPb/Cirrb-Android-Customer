<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_small" />

    <TextView
        android:id="@+id/tv_order_compltee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/txt_order_complete"
        android:textAllCaps="true"
        android:textColor="@color/colorButton"
        android:textSize="30dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_compltee"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_order_complete_msg"
        android:textSize="18dp" />


    <Button
        android:id="@+id/btn_confrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorButton"
        android:text="@string/txt_track_order"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />
</RelativeLayout>